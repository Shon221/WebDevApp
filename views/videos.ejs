<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YouTube Favorites</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Home</a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">Welcome, <%= user.fullName %></span>
                <form method="POST" action="/logout" style="display: inline;">
                    <button type="submit" class="btn btn-link nav-link"
                        style="border: none; background: none; color: inherit;">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>YouTube Video Search & Favorites</h1>

        <!-- Search Form -->
        <form action="/videos/search" method="POST" class="mb-4">
            <div class="input-group">
                <input type="text" name="query" class="form-control" placeholder="Search for YouTube videos..."
                    required>
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>

        <% if (error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
            <% } %>

                <!-- Search Results -->
                <% if (searchResults && searchResults.length> 0) { %>
                    <h2>Search Results</h2>
                    <div class="row">
                        <% searchResults.forEach(video=> { %>
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <img src="<%= video.thumbnail %>" class="card-img-top" alt="<%= video.title %>">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= video.title %>
                                        </h5>
                                        <a href="https://www.youtube.com/watch?v=<%= video.videoId %>" target="_blank"
                                            class="btn btn-sm btn-outline-primary me-2">Watch</a>
                                        <form action="/videos/favorites" method="POST" style="display: inline;">
                                            <input type="hidden" name="videoId" value="<%= video.videoId %>">
                                            <input type="hidden" name="title" value="<%= video.title %>">
                                            <input type="hidden" name="thumbnail" value="<%= video.thumbnail %>">
                                            <button type="submit" class="btn btn-success">Add to Favorites</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>

                        <!-- Favorites -->
                        <h2 class="mt-5">My Favorites</h2>
                        <% if (favorites.length===0) { %>
                            <p>No favorites yet.</p>
                            <% } else { %>
                                <div id="favorites-list">
                                    <% favorites.forEach((fav, index)=> { %>
                                        <div class="card mb-3" data-id="<%= fav.id %>">
                                            <div class="card-body d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= fav.thumbnail %>" alt="<%= fav.title %>"
                                                        style="width: 120px; height: 90px; margin-right: 15px;">
                                                    <div>
                                                        <h5 class="card-title">
                                                            <%= fav.title %>
                                                        </h5>
                                                        <a href="https://www.youtube.com/watch?v=<%= fav.videoId %>"
                                                            target="_blank"
                                                            class="btn btn-sm btn-outline-primary">Watch</a>
                                                    </div>
                                                </div>
                                                <div>
                                                    <button class="btn btn-sm btn-outline-secondary move-up"
                                                        <%=index===0 ? 'disabled' : '' %>>↑</button>
                                                    <button class="btn btn-sm btn-outline-secondary move-down"
                                                        <%=index===favorites.length - 1 ? 'disabled' : '' %>>↓</button>
                                                    <form action="/videos/favorites/<%= fav.id %>?_method=DELETE"
                                                        method="POST" style="display: inline;">
                                                        <button type="submit"
                                                            class="btn btn-sm btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                                <% } %>
    </div>

    <script>
        $(document).ready(function () {
            $('.move-up').click(function () {
                const card = $(this).closest('.card');
                const prevCard = card.prev('.card');
                if (prevCard.length) {
                    card.insertBefore(prevCard);
                    updateOrder();
                }
            });

            $('.move-down').click(function () {
                const card = $(this).closest('.card');
                const nextCard = card.next('.card');
                if (nextCard.length) {
                    card.insertAfter(nextCard);
                    updateOrder();
                }
            });

            function updateOrder() {
                const favorites = [];
                $('#favorites-list .card').each(function (index) {
                    favorites.push({
                        id: $(this).data('id'),
                        orderIndex: index
                    });
                });

                $.ajax({
                    url: '/videos/favorites/order',
                    method: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify({ favorites }),
                    success: function (response) {
                        console.log('Order updated');
                    },
                    error: function (err) {
                        console.error('Error updating order', err);
                    }
                });
            }
        });
    </script>
</body>

</html>